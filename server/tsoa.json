{
  "entryFile": "./src/server.ts",
  "noImplicitAdditionalProperties": "silently-remove-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "./src",
    "basePath": "api/v1",
    "specVersion": 3
  },
  "routes": {
    "basePath": "api/v1",
    "routesDir": "./src",
    "middleware": "express"
  },
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "shared/*": ["src/_shared/*"]
    }
  }
}
