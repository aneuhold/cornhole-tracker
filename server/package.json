{
  "name": "server",
  "version": "1.0.0",
  "description": "The server and database for the cornhole-tracker project",
  "main": "index.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "start": "yarn build && cross-env MONGO_URL=localhost && node lib/index.js",
    "start:docker": "yarn build && cross-env MONGO_URL=mongo node lib/index.js",
    "test": "cross-env MONGO_URL=localhost jest --detectOpenHandles",
    "dev": "nodemon"
  },
  "type": "commonjs",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.1",
    "@types/node": "^18.7.16",
    "babel-jest": "^29.0.3",
    "jest": "^29.0.3",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.0"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "module-alias": "^2.2.2",
    "mongodb": "^4.9.1",
    "rimraf": "^3.0.2",
    "shx": "^0.3.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.4.3"
  },
  "_moduleAliases": {
    "shared": "lib/_shared",
    "src": "lib"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  }
}
